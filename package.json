{
    "name": "books-monorepo",
    "description": "TypeScript-based monorepo for the Books system",
    "private": true,
    "workspaces": [
      "packages/*",
      "applications/*",
      "examples/*"
    ],
    "scripts": {
      "docs": "doctoc --title '**Table of content**' README.md",
      "clean": "lerna run clean",
      "build": "lerna run build",
      "pub": "lerna publish",
      "test": "lerna run test",
      "lint": "eslint --ext js,ts,tsx ."
    },
    "devDependencies": {
      "eslint": "~7.28.0",
      "eslint-plugin-import": "~2.23.0",
      "lerna": "~4.0.0",
      "react": "~17.0.0",
      "typescript": "~4.3.0"
    }
  }